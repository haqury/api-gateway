# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8080
APP_ENV=development
APP_DEBUG=true

# Video Streaming Settings
VIDEO_MAX_FRAME_SIZE=10485760  # 10MB
VIDEO_MAX_FPS=60
VIDEO_DEFAULT_CODEC=H.264
VIDEO_MAX_STREAMS=100
VIDEO_STREAM_TIMEOUT=300  # 5 minutes

# Client Settings
CLIENT_HEARTBEAT_INTERVAL=30
CLIENT_CONNECTION_TIMEOUT=600
CLIENT_MAX_RECONNECT_ATTEMPTS=3

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Security
CORS_ALLOWED_ORIGINS=*
API_KEY_REQUIRED=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds